<main>
  <h1>Editar cliente</h1>

  <%= form_for @customer do |form| %>
    <fieldset>
      <%= form.label :name %>
      <%= form.text_field :name %>
    </fieldset>
    <fieldset>
      <%= form.label :email %>
      <%= form.text_field :email %>
    </fieldset>
    <fieldset>
      <%= form.label :phone %>
      <%= form.text_field :phone %>
    </fieldset>
    <fieldset>
      <%= form.label :avatar %>
      <%= form.file_field :avatar %>
    </fieldset>
    <fieldset>
      <%= form.label :smoker %>
      <%= form.radio_button :smoker, 'S' %> Sim
      <%= form.radio_button :smoker, 'N' %> NÃ£o
    </fieldset>
    <%= form.submit "Atualizar", disable_with: 'Atualizando...' %>
  <% end %>
</main>